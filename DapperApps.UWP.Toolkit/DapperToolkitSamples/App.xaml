<windows:PrismUnityApplication
    x:Class="DapperToolkitSamples.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:windows="using:Prism.Unity.Windows"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--If multiple merged dictionaries exist, these dictionaries are checked in the inverse of the order in which they are declared in the MergedDictionaries property.-->
                <ResourceDictionary Source="Themes/Converters.xaml" />
                <ResourceDictionary Source="Themes/Styles.xaml"/>
                <ResourceDictionary Source="Themes/Colors.xaml" />
                <ResourceDictionary Source="Themes/Fonts.xaml" />
                <ResourceDictionary Source="Themes/Constants.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--  Converters  -->
        </ResourceDictionary>
    </Application.Resources>

</windows:PrismUnityApplication>
